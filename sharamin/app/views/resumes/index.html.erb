<p id="notice"><%= notice %></p>

<div class="container">
	<div class="row club_intro">
		<%= image_tag @post.logo_img.to_s, class:'logo_img float-left' %>
		<p>
			<%= @post.description %>
		</p>
	</div>
	<div class="row">
		<div class="col-sm-2">
			<strong>모집부문</strong>
		</div>
		<div class="col-sm-">
			<%= @post.target %>
		</div>
	</div>
	<div class="row">
		<div class="col-sm-2">
			<strong> 모집기간 </strong>
		</div>
		<div class="col-sm-10">
			<%= @post.deadline.strftime("%Y-%m-%d %H시 까지") %>
		</div>
	</div>
	<div class="row">
		<div class="col-sm-2">
			<strong> 기타 사항 </strong>
		</div>
		<div class="col-sm-10">
			<%= @post.etc %>
		</div>
	</div>
	<div class="row">
		<div class="col-sm-2">
			<strong> 홈페이지 주소 </strong>
		</div>
		<div class="col-sm-10">
			<a href="<%= @post.homepage %>" target="_blank"><%= @post.club %> 홈페이지</a>
		</div>
	</div>
	<div class="row attach_wrapper">
	<%= image_tag @post.attachment.to_s %>
	</div>
</div>
<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @resumes.each do |resume| %>
      <tr>
        <td><%= link_to 'Show', resume %></td>
        <td><%= link_to 'Edit', edit_resume_path(resume) %></td>
        <td><%= link_to 'Destroy', resume, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Resume', new_resume_path %>
