<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Club</th>
      <th>Deadline</th>
      <th>Target</th>
      <th>Type</th>
      <th>Homepage</th>
      <th>Description</th>
      <th>Questions</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.club %></td>
        <td><%= post.deadline %></td>
        <td><%= post.target %></td>
        <td><%= post.recruit_type %></td>
        <td><%= post.homepage %></td>
        <td><%= post.description %></td>
        <td><%= post.questions %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
