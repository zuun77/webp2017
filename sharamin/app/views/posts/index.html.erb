<style>
.logo {
	margin-top:60px;
	text-align:center;
}

.logo_img {
	width:200px;
	height:200px;
}

body{
	color:#666;
	margin-top:20px;
	overflow-x:hidden;
}

a {
	color:#666;
	text-decoration:none;
}
#main-content li{
	border:solid #CCC;
	border-width:0 1px 1px 0;
	background:	#effbff;
	padding:10px;
	display:inline-block;
	margin: 20px 0 20px;
	border-radius:10px;
}

#main-content li img{
	width:20vw;
	height:20vw;
}


#main-content a span{
	height:40px;
	line-height:40px;
	position:absolute;
	left:-9999px;
}
#main-content a:hover span{
	top:30px;
	left:45px;
	width:20vw;
	font-weight:bold;
	background:#FFF;
	color:#1a1a1a;
	padding:-10px 0 5px 0;
	text-transform:uppercase;
	font-size:16px;
	line-height:40px;
	border:1px solid #EEE;
	border-width:0 0 10px 0;
	filter: alpha(opacity=100);
}


</style>
<div class="logo">
	<%= image_tag "logo.png", class:'logo_img' %>
</div>

<div class="container-fluid">
	<div id="main-content">
	<div class="row">
		<% @posts.each do |post| %>
		<div class="col-md-3 center">
			<li>
				<a href="/posts/<%= post.id %>">
					<%= image_tag(post.logo_img.to_s) %>
					<span><%= post.club %></span>
				</a>
			</li>
		</div>
		<% end %>
	</div>
</div>
